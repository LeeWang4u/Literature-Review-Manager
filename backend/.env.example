# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_DATABASE=literature_review_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# AI Service Configuration
# Google Gemini API Key (Required)
# The system uses multiple Gemini models with automatic fallback when quota is reached:
# 1. gemini-2.0-flash-exp (Best quality, newest)
# 2. gemini-1.5-flash (Fast and efficient)
# 3. gemini-1.5-flash-8b (Highest quota limit)
# 4. gemini-1.5-pro (Highest quality)
# 5. gemini-1.0-pro (Most stable, legacy)
#
# Get your free API key: https://makersuite.google.com/app/apikey
# Free tier: 1500 requests/day per model (total ~7500 requests/day across all models)

GEMINI_API_KEY=your-gemini-api-key

# Legacy OpenAI Configuration (if needed)
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
